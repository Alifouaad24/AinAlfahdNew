@using System.Diagnostics.Metrics
@using AinAlfahd.Data
@inject MasterDBContext db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AinAlfahd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AinAlfahd.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        .bbode {
            display: flex;
        }



        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }

        .sidebar .nav-link {
            color: #ffffff;
        }

        .main-content {
            padding:100px;
            flex-grow: 1; 
            padding: 10px;
            height: 80vh;
            overflow-y: auto;
            white-space: nowrap;
            
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                @{
                    var env = await db.TblConfigs.FindAsync(2);

                }
                <a class="navbar-brand bg-danger p-3 fon text-white rounded-5" asp-area="" asp-controller="" asp-action="">Enviroment Work: @env.Db_env</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                </div>
            </div>
        </nav>
    </header>
    <div class="bbode">
        <div class="sidebar">
            <ul class="navbar-nav flex-column">
                @*             <li class="nav-item">
                <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Customer" asp-action="AddZero">إضافة صفر الى بداية أرقام جوالات العملاء</a>
                </li> *@
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Customer" asp-action="Search">بحث عن عميل</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-1" asp-area="Admin" asp-controller="Customer" asp-action="AddCustomer">إضافة عميل شحن جوي</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Customer" asp-action="Index">عرض العملاء ذو خدمة شحن جوي</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="CustomerServices" asp-action="AddCustomerService">إضافة خدمة لعميل</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Order" asp-action="Index">بحث عن طلب</a>
                </li>  
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Order" asp-action="Special">طلبات حسب التاريخ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Recipt" asp-action="AddReciept">اجراء عملية دفع</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-end fs-6 bg-gradient p-3 m-1 table-bordered rounded-5" asp-area="Admin" asp-controller="Recipt" asp-action="Index"> عمليات الدفع</a>
                </li>
            </ul>
        </div>

        <div class="main-content">
            <div class="containers">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AinAlfahd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
