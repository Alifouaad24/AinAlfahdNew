@using AinAlfahd.Models
@model Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<div class="container col-md-5 mt-5">

    <br />
    <p class="text-center bg-light fs-3 text-danger">@TempData["message"]</p>
    <form asp-action="SaveService" method="post" asp-controller="Service" class="mt-4 p-4 bg-light rounded shadow-sm">

        <div class="mb-4 text-center">
            <h3 class="fw-bold text-primary">إضافة خدمة جديدة</h3>
        </div>

        <div class="form-group">
            <p for="service" class="form-label m-2 text-end">اسم الخدمة</p>
            <input id="service" asp-for="@Model.Description" class="form-control m-2 form-control-lg" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary px-5 py-2">
                <i class="bi bi-save2"></i> حفظ
            </button>
        </div>

    </form>

</div>

